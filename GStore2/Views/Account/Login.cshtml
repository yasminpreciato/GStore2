@model GStore2.ViewModels.LoginVM
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}


<div class="container">
    <div class="row justify-content-center">
        <h1 class="display-5 text-center">GStore</h1>
        <div class="col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header">
                    <h3 class="text-center font-weight-light my-4">Login</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Login" method="post">
                        <div asp-validation-summary="ModelOnly" hidden></div>
                        <input type="hidden" asp-for="UrlRetorno">
                        <div class="form-floating mb-3">
                            <input class="form-control" asp-for="Email" />
                            <label asp-for="Email"></label>
                            <span asp-validation-for="Email" class="text-danger text-sm"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input class="form-control" asp-for="Senha" />
                            <label asp-for="Senha"></label>
                            <span asp-validation-for="Senha" class="text-danger text-sm"></span>
                        </div>
                        <div class="form-check mb-3">
                            <input class="form-check-input" asp-for="Lembrar" type="checkbox" value="" />
                            <label class="form-check-label" asp-for="Lembrar"></label>
                        </div>
                        <div class="d-flex flex-column align-items-center justify-content-center mt-4 mb-0">
                            <input type="submit" class="btn btn-primary w-100 mb-3" value="Entrar">
                            <a class="Email" href="password.html">Esqueceu sua Senha?</span>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center py-3">
                    <div class="small">Novo por aqui?<a href="register.html">Criar sua conta!</a></div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial.cshtml"></partial>
    <script type="text/javascript">
        let mensagemErro = '';
        $(".validation-summary-errors ul li").each(function () {
            mensagemErro += arguments $(this).text() + '<br />';
        });
        if (mensagemErro != '')
            swal.fire(
                'Acesso Negado',
                mensagemErro,
                'error'
            );

    </script>
}
