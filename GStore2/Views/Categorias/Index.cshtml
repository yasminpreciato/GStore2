@model IEnumerable<GStore2.Models.Categoria>
@{
    ViewData["Title"] = "Categorias";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<h1 class="my-4">Categorias</h1>
<a asp-action="Create" class="btn btn-primary"><i class="fas fa-add me-1"></i> Adicionar</a>
<div class="card my-4">
    <div class="card-body">
        <table class="table d-none" id="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th class="not-export-col">Ações&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-edit me-1"></i></a>
                            <a asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-search me-1"></i></a>
                            <a asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


@section Scripts {
    <partial name="_DatatableScripts.cshtml"></partial>
}