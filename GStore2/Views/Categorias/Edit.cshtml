@model GStore2.Models.Categoria
@{
    ViewData["Title"] = "Categorias";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="my-4">Categoria</h1>
<h4 class="mb-4">Alterar</h4>

<div class="card my-4 border-dark border-2 rounded-1">
    <div class="card-body">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-8 col-lg-10">
                    <div class="mb-3">
                        <label asp-for="Nome" class="form-label"></label>
                        <input asp-for="Nome" class="form-control p-2 border-dark border-2 rounded-1" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Foto" class="form-label"></label>
                        <input type="file" id="Arquivo" name="Arquivo" 
                            class="form-control p-2 border-dark border-2 rounded-1"/>
                    </div>
                </div>
                <div class="col-md-4 col-lg-2">
                    <label for="Preview" class="form-label">Pr√©via</label>
                    <img id="Preview" src="@Model.Foto" class="img-fluid p-2 border-dark border-2 rounded-1">
                </div>
            </div>
            <div class="d-flex mt-4">
                <button type="submit" class="btn btn-outline-success me-2">
                    <i class="fas fa-save me-1"></i> Salvar
                </button>
                <a asp-action="Index" class="btn btn-outline-danger">
                    <i class="fas fa-cancel me-1"></i> Cancelar
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial.cshtml"></partial>
    <script>
        document.querySelector("input[type='file']").addEventListener('change', function() {
            if (this.files && this.files[0]){
                var img = document.getElementById("Preview");
                img.scr = URL.createObjectURL(this.files[0]);
            }
        });
    </script>
}
