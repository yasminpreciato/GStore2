@model GStore2.Models.Categoria
@{
    ViewData["Title"] = "Categorias";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="my-4">Categoria</h1>
<h4 class="mb-4">Detalhes</h4>

<div class="card my-4 border-dark border-2 rounded-1">
    <div class="card-body">
            <div class="row">
                <div class="col-md-8 col-lg-10">
                    <div class="mb-3">
                        <label asp-for="Nome" class="form-label"></label>
                        <input asp-for="Nome" class="form-control p-2 border-dark border-2 rounded-1" readonly/>
                    </div>
                </div>
                <div class="col-md-4 col-lg-2">
                    <label class="form-label">Foto</label>
                    <img id="Preview" src='@(Model.Foto ?? Url.Content("~/img/semfoto.gif"))'
                        class="img-fluid p-2 border-dark border-2 rounded-1" />
                </div>
            </div>
            <div class="d-flex mt-4">
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-outline-warning me-2">
                    <i class="fas fa-edit me-1"></i> Alterar
                </a>
                <a asp-action="Index" class="btn btn-outline-info">
                    <i class="fas fa-home me-1"></i> Voltar
                </a>
            </div>
        </div>
    </div>

